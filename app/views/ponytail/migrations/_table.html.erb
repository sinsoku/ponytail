<div class="pt_table">
  <div class="pt_table_name">
    <span><%= table.name %></span>
    <input type="text" value="<%= table.name %>" />
  </div>
  <div>
    <a href="#" class="pt_drop_table">drop</a>
  </div>
  <div class="pt_columns">
    <% table.columns.each do |column| %>
      <%= render 'column', column: column %>
    <% end %>
  </div>
</div>
